<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Spring Boot 색상/스택트레이스 컨버터 등록 -->
    <conversionRule conversionWord="clr"
                    converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex"
                    converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>

    <!-- 공통 MDC 컬럼 -->
    <property name="MDC_COLS" value="[cartId=%X{cartId}] [orderId=%X{orderId}]"/>

    <!-- 콘솔(컬러) / 파일(무채색) 패턴 분리  ⚠️ 한 줄로 두세요(개행/들여쓰기 제거) -->
    <property name="CONSOLE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %clr([%thread]){faint} %clr(%-5level) %clr(%logger{36}){cyan} - %msg %clr(${MDC_COLS}){faint}%n"/>
    <property name="FILE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg ${MDC_COLS}%n"/>

    <property name="LOG_DIR" value="logs"/>

    <!-- 콘솔: 컬러 출력 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${CONSOLE_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 파일: 롤링 + 무채색 패턴 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/iluDev.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/iluDev.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- 필요시 패키지 레벨 조정 -->
    <logger name="com.example" level="INFO"/>
    <logger name="org.springframework" level="WARN"/>
</configuration>
